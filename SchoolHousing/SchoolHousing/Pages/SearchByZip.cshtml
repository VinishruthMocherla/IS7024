@page
@model SchoolHousing.Pages.SearchByZipModel
@{
    ViewData["Title"] = "SearchByZip";
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>My Profile</title>
    <link rel="stylesheet" href="css/Styles.css" type="text/css" />
    <link rel="stylesheet" media="Screen and  (max-width: 480px)" href="css/Mobile.css" type="text/css" />
    <link rel="stylesheet" media="Print" href="css/Print.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body></body>
</html>
<h1>SearchByZip</h1>
<form action="" method="POST" style="margin-top: 50px;">
    <div class="form-group">
        <label style="font-size:20px;" class="control-label" for="ZipSearch"><strong>Enter Zipcode</strong></label>
        <input type="text" class="form-control" name="ZipSearch" id="ZipSearch" style="width:50%" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search Houses" class="btn btn-primary" />
    </div>
</form>

@if (Model.searchFinished == true)
{
    <table class="table table-striped table-light">
        <thead class="thead-dark">
            <tr>
                <th>Community Area</th>
                <th>Property Name</th>
                <th>Property Type</th>
                <th>Address</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var house in Model.housesFiltered)
            {


                <tr>
                    <td>@house.CommunityArea</td>
                    <td>@house.PropertyName</td>
                    <td>@house.PropertyType</td>
                    <td>@house.Address</td>
                </tr>
            }


        </tbody>
    </table>
    <table class="table table-striped table-light">
        <thead class="thead-dark">
            <tr>
                <th> School Name</th>
                <th>Website</th>
                <th>Phone Number</th>
                <th>School Safety</th>
                <th> Creative Certification</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var school in Model.schoolsFiltered)
            {
                <tr>
                    <td>@school.NameOfSchool</td>
                    <td>@school.Website</td>
                    <td>@school.PhoneNumber</td>
                    <td>@school.Safe</td>
                    <td>@school.CreativeSchoolsCertification</td>

                </tr>
            }
        </tbody>
    </table>
}
