@page
@model SchoolHousing.Pages.AffordableHouses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].CommunityArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].PropertyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].NameOfSchool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AffordableHouse[0].QualityOfFacilities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AffordableHouse) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommunityArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfSchool)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualityOfFacilities)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SchoolId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SchoolId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SchoolId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
